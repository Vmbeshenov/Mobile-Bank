<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_card_account"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="40dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_view_card_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.08"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/card_view_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.09"
            card_view:layout_constraintStart_toStartOf="@+id/card_view_card_image"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/card_view_card_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_blue"
            android:textSize="30sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.70"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_view_card_balance_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_blue"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="@id/card_view_card_balance"
            card_view:layout_constraintStart_toEndOf="@id/card_view_card_balance"
            card_view:layout_constraintTop_toTopOf="@id/card_view_card_balance"
            card_view:layout_constraintVertical_bias="0.75" />

        <TextView
            android:id="@+id/card_view_card_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/ruble_symbol"
            android:textColor="@color/light_blue"
            android:textSize="28sp"
            card_view:layout_constraintBottom_toBottomOf="@id/card_view_card_balance"
            card_view:layout_constraintStart_toEndOf="@id/card_view_card_balance"
            card_view:layout_constraintTop_toTopOf="@id/card_view_card_balance" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>