<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diploma.bank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bank_dark"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bank_dark_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PaymentBetweenActivity"
            android:parentActivityName=".PaymentMenuActivity"
            />
        <activity
            android:name=".PaymentMenuActivity"
            android:parentActivityName=".MainMenu.MainActivity" />
        <activity
            android:name=".CardAccountActivity"
            android:parentActivityName=".MainMenu.MainActivity" />
        <activity android:name=".Authorization.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu.MainActivity"/>
    </application>

</manifest>